generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core wiki article model
model Article {
  id            String   @id @default(cuid())
  title         String   @unique
  slug          String   @unique
  description   String   @db.Text
  content       String   @db.Text // Markdown content
  contentHtml   String   @db.Text // Cached HTML for performance

  // SEO fields
  metaTitle     String?
  metaDescription String?
  keywords      String[] // Array of SEO keywords

  // Media
  featuredImage String? // URL to featured image
  images        ArticleImage[] // Related images

  // Structure
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    String
  subcategory   String? // Optional subcategory for organization

  // Cross-references
  relatedArticles   ArticleRelation[] @relation("from")
  relatedByArticles ArticleRelation[] @relation("to")
  links             ArticleLink[]

  // Table of contents
  tableOfContents   Json? // Cached structure
  sections          ArticleSection[]

  // Metadata
  author        User @relation(fields: [authorId], references: [id])
  authorId      String
  editors       User[] @relation("EditedArticles")

  // Status
  status        ArticleStatus @default(DRAFT)
  viewCount     Int @default(0)
  likeCount     Int @default(0)

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  publishedAt   DateTime?

  // Versioning
  versions      ArticleVersion[]

  // GPT Curation
  changeProposals ChangeProposal[]
  relationGraphFrom ArticleRelationshipGraph[] @relation("RelationFrom")
  relationGraphTo   ArticleRelationshipGraph[] @relation("RelationTo")
  consistencyIssues ConsistencyIssue[]

  @@index([slug])
  @@index([categoryId])
  @@index([status])
  @@index([createdAt])
  @@fulltext([title, content]) // For full-text search
}

model ArticleImage {
  id            String   @id @default(cuid())
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     String

  url           String
  altText       String
  caption       String?
  width         Int
  height        Int
  size          Int // File size in bytes

  // Image metadata
  format        String // jpg, png, webp, etc.
  priority      Int @default(0) // For ordering

  createdAt     DateTime @default(now())

  @@index([articleId])
}

model ArticleSection {
  id            String   @id @default(cuid())
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     String

  title         String
  level         Int // Heading level 1-6
  content       String   @db.Text
  order         Int

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([articleId])
}

// Cross-references between articles
model ArticleRelation {
  id            String   @id @default(cuid())

  from          Article  @relation("from", fields: [fromId], references: [id], onDelete: Cascade)
  fromId        String

  to            Article  @relation("to", fields: [toId], references: [id], onDelete: Cascade)
  toId          String

  // Type of relation: "see_also", "related", "parent", "child", etc.
  relationType  String @default("related")

  createdAt     DateTime @default(now())

  @@unique([fromId, toId])
  @@index([fromId])
  @@index([toId])
}

// External and internal links
model ArticleLink {
  id            String   @id @default(cuid())
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     String

  url           String
  text          String
  linkType      String @default("external") // internal, external
  isValid       Boolean @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([articleId])
}

// Article versioning for history
model ArticleVersion {
  id            String   @id @default(cuid())
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     String

  title         String
  content       String   @db.Text
  editor        User @relation(fields: [editorId], references: [id])
  editorId      String

  changes       String? // JSON diff or summary
  reason        String? // Reason for edit

  versionNumber Int

  // GPT Curation Metadata
  curatorConversation  CuratorConversation? @relation(fields: [curatorConversationId], references: [id])
  curatorConversationId String?
  curatorReasoning  String? // Why the GPT made this change
  changeSource     String @default("manual") // manual, gpt, github, admin
  eeaScores        Json? // Expertise, Authoritativeness, Experience, Trustworthiness

  createdAt     DateTime @default(now())

  @@index([articleId])
  @@index([editorId])
  @@index([curatorConversationId])
}

// GPT Curation Conversation (tracks all GPT-driven changes)
model CuratorConversation {
  id            String   @id @default(cuid())
  gptSessionId  String   @unique // Links to ChatGPT conversation

  user          User @relation(fields: [userId], references: [id])
  userId        String

  // What the user asked for
  userIntent    String   @db.Text // Natural language description of policy/direction change
  systemContext String?  @db.Text // Additional context about the wiki's vision

  // Changes made
  articleVersions ArticleVersion[]
  proposedChanges ChangeProposal[]

  // Coherence metrics
  consistencyScoreBefore Float? @default(1.0)
  consistencyScoreAfter  Float? @default(1.0)
  conflictsResolved Int @default(0)

  // Status tracking
  status        CuratorStatus @default(IN_PROGRESS) // in_progress, completed, cancelled

  // Full audit trail
  conversationLog Json? // Full GPT + user conversation

  createdAt     DateTime @default(now())
  completedAt   DateTime?

  @@index([userId])
  @@index([status])
}

// Change proposals from GPT (before execution)
model ChangeProposal {
  id            String   @id @default(cuid())
  conversation  CuratorConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String

  article       Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     String

  action        ChangeAction // update, deprecate, create, merge
  proposedContent String?   @db.Text // For updates/creates
  reason        String    @db.Text // Why GPT suggests this

  // Impact analysis
  affectedLinks Int? // How many inbound links would be affected
  affectedTags  String[]
  relatedChanges String[] // IDs of other proposals this depends on

  status        ProposalStatus @default(PENDING) // pending, approved, rejected, executed

  approvedBy    User? @relation(fields: [approvedById], references: [id])
  approvedById  String?
  approvalNote  String?
  approvedAt    DateTime?

  createdAt     DateTime @default(now())
  executedAt    DateTime?

  @@index([conversationId])
  @@index([articleId])
  @@index([status])
}

// Relationship graph for coherence analysis
model ArticleRelationshipGraph {
  id            String   @id @default(cuid())

  fromArticle   Article  @relation("RelationFrom", fields: [fromArticleId], references: [id], onDelete: Cascade)
  fromArticleId String

  toArticle     Article  @relation("RelationTo", fields: [toArticleId], references: [id], onDelete: Cascade)
  toArticleId   String

  relationType  RelationType // mentions, references, contradicts, replaces, etc.
  strength      Float @default(0.5) // 0-1: how important is this relationship

  // When this was last verified/updated
  lastVerifiedAt DateTime @default(now())
  lastVerifiedBy String? // Which GPT conversation verified this

  // Coherence notes
  note          String?

  @@unique([fromArticleId, toArticleId, relationType])
  @@index([fromArticleId])
  @@index([toArticleId])
}

// Consistency check results
model ConsistencyReport {
  id            String   @id @default(cuid())

  conversation  CuratorConversation? @relation(fields: [conversationId], references: [id])
  conversationId String?

  // Overall scores
  consistencyScore Float // 0-1 scale
  tagConsistency   Float
  linkConsistency  Float
  semanticCoherence Float

  // Issues found
  issues        ConsistencyIssue[]
  suggestions   String[] @db.Text

  // When analyzed
  analyzedAt    DateTime @default(now())

  @@index([conversationId])
}

// Individual consistency issues
model ConsistencyIssue {
  id            String   @id @default(cuid())
  report        ConsistencyReport @relation(fields: [reportId], references: [id], onDelete: Cascade)
  reportId      String

  issueType     IssueType // tag_mismatch, broken_reference, contradiction, orphaned_content, etc.
  severity      IssueSeverity // critical, high, medium, low

  affectedArticle Article? @relation(fields: [affectedArticleId], references: [id])
  affectedArticleId String?

  description   String  @db.Text
  suggestion    String? @db.Text

  @@index([reportId])
  @@index([affectedArticleId])
}

// Enums for curation system
enum CuratorStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
  PAUSED
}

enum ChangeAction {
  UPDATE      // Modify existing article
  DEPRECATE   // Mark as deprecated
  CREATE      // Create new article
  MERGE       // Merge two articles
  ARCHIVE     // Archive article
  DELETE      // Soft delete
}

enum ProposalStatus {
  PENDING     // Waiting for user approval
  APPROVED    // User approved
  REJECTED    // User rejected
  EXECUTED    // Changes applied
  REVERTED    // Changes rolled back
}

enum RelationType {
  MENTIONS        // Article A mentions topic from Article B
  REFERENCES      // Article A references Article B
  CONTRADICTS     // Articles contradict each other
  REPLACES        // Article A replaces/supersedes Article B
  RELATED_TO      // General relationship
  PARENT_TOPIC    // Hierarchical relationship
  CHILD_TOPIC     // Hierarchical relationship
  SEE_ALSO        // Suggested reading
  PREREQUISITE    // Article A should be read before B
}

enum IssueType {
  TAG_MISMATCH        // Article tagged inconsistently
  BROKEN_REFERENCE    // Link points to deprecated/deleted article
  CONTRADICTION       // Two articles say opposite things
  ORPHANED_CONTENT    // No inbound links/references
  UNUSED_REFERENCE    // References something not mentioned
  INCOMPLETE_UPDATE   // Related articles not updated
  STYLE_INCONSISTENCY // Different tone/format
  OUTDATED            // Content marked as outdated
}

enum IssueSeverity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
}

model Category {
  id            String   @id @default(cuid())
  name          String   @unique
  slug          String   @unique
  description   String?
  icon          String? // Icon name or emoji
  color         String? // Hex color for UI

  articles      Article[]
  subcategories Category[] @relation("parent")
  parent        Category? @relation("parent", fields: [parentId], references: [id])
  parentId      String?

  order         Int @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([slug])
}

// User model for editors and contributors
model User {
  id            String   @id @default(cuid())
  username      String   @unique
  email         String   @unique
  password      String // Hash

  displayName   String
  avatar        String? // Avatar URL
  bio           String?

  role          UserRole @default(USER)

  articles      Article[] // Articles authored
  editedArticles Article[] @relation("EditedArticles")
  versions      ArticleVersion[]

  // Curation relationships
  curatorConversations CuratorConversation[]
  proposalApprovals    ChangeProposal[] @relation("ApprovedBy")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([username])
}

// Search index for performance
model SearchIndex {
  id            String   @id @default(cuid())
  articleId     String   @unique
  title         String
  slug          String   @unique
  description   String?
  keywords      String[]
  content       String   @db.Text // For full-text search

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@fulltext([title, content, keywords])
}

// Editor picks / featured articles
model FeaturedArticle {
  id            String   @id @default(cuid())
  title         String
  slug          String
  description   String?
  imageUrl      String?
  order         Int

  createdAt     DateTime @default(now())
  expiresAt     DateTime?

  @@index([order])
}

enum ArticleStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
  DELETED
}

enum UserRole {
  ADMIN
  EDITOR
  CONTRIBUTOR
  USER
  GUEST
}
